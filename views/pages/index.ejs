<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header><%- include('../partials/header'); %>
    </header>

    <main>
      <section>
        <h2>Your World</h2>
        <form method="post" action="results">
          <h3>Year:</h3>
          <input type="radio" name="year" value="past" />
          <label for="past"> Past </label>

          <input type="radio" name="year" value="present" />
          <label for="present"> Present </label>

          <input type="radio" name="year" value="future" />
          <label for="future"> Future </label>

          <h3>Season:</h3>
          <input type="radio" name="season" value="winter" />
          <label for="winter"> Winter</label>

          <input type="radio" name="season" value="spring" />
          <label for="spring"> Spring</label>

          <input type="radio" name="season" value="summer" />
          <label for="summer"> Summer</label>

          <input type="radio" name="season" value="fall" />
          <label for="fall"> Fall </label>

          <h3>Envoirement</h3>
          <input type="radio" name="envoirement" value="sea"/>
          <label for="sea"> Sea </label>

          <input type="radio" name="envoirement" value="forest"/>
          <label for="forest"> Forest </label>

          <input type="radio" name="envoirement" value="desert"/>
          <label for="desert"> Desert </label>

          <input type="radio" name="envoirement" value="mountains"/>
          <label for="mountains"> Mountains </label>

          <input type="radio" name="envoirement" value="underground"/>
          <label for="underground"> Underground </label>

          <input type="radio" name="envoirement" value="flat"/>
          <label for="underground"> Flat </label>

          <h3>Size</h3>
          <input type="radio" name="size" value="small">
          <label for="small"> Small </label>

          <input type="radio" name="size" value="medium">
          <label for="medium"> Medium </label>

          <input type="radio" name="size" value="big">
          <label for="big"> Big </label> 

          <br> <input id="generate" type="submit" value="Generate">
        </form>
      </section>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
    <script src="../../scripts/script.js"></script>
  </body>
</html>
